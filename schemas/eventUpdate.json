{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://our.company.com/eventUpdate.schema.json",
	"type": "object",
	"properties": {
		"title": {
			"type": "string",
			"minLength": 1,
			"maxLength": 100
		},
		"description": {
			"type": "string",
			"minLength": 1,
			"maxLength": 200
		},
		"event_date": {
			"type": "string"
		},
		"event_time": {
			"type": "string"
		},
		"city": {
			"type": "string",
			"minLength": 1,
			"maxLength": 50
		},
		"state": {
			"type": "string",
			"minLength": 1,
			"maxLength": 50
		},
		"country": {
			"type": "string",
			"minLength": 1,
			"maxLength": 50
		},
		"img_url": {
			"type": "string"
		}
	},
	"additionalProperties": false,
	"required": []
}
