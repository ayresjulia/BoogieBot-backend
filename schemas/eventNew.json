{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://our.event.com/eventNew.schema.json",
	"type": "object",
	"properties": {
		"title": {
			"type": "string",
			"minLength": 1,
			"maxLength": 100
		},
		"description": {
			"type": "string",
			"minLength": 1,
			"maxLength": 200
		},
		"eventDate": {
			"type": "string",
			"format": "date"
		},
		"eventTime": {
			"type": "string"
		},
		"city": {
			"type": "string",
			"minLength": 1,
			"maxLength": 50
		},
		"state": {
			"type": "string",
			"minLength": 1,
			"maxLength": 50
		},
		"country": {
			"type": "string",
			"minLength": 1,
			"maxLength": 50
		}
	},
	"additionalProperties": false,
	"required": [ "title", "description", "eventDate", "eventTime", "city", "state", "country" ]
}
